version: '3'

networks:
  traefik:
    external: true

services:
  api:
    image: {{ api_image }}
    deploy:
      labels:
        - traefik.frontend.rule=Host:demo.nspain.me
        - traefik.port=8080
        - traefik.backend=api
        - traefik.docker.network=traefik
    networks:
      - traefik
  traefik:
    image: traefik:v1.7.12-alpine
    environment:
      DO_AUTH_TOKEN: {{ digitalocean_token }}
    ports:
      - 80:80
      - 443:443
    volumes:
      - /etc/traefik:/etc/traefik
      - /var/run/docker.sock:/var/run/docker.sock
    networks:
      - traefik